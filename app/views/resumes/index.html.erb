<p id="notice"><%= notice %></p>

<h1>Resumes</h1>

<% if current_user.user_type == 'Employer'%>
  <table>
  <thead>
    <tr>
      <th>Major</th>
      <th>Degree</th>
      <th>Year</th>
      <th>Download</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resumes.each do |resume| %>
      <% student = User.find_by(id: resume[:user_id]) %>
      <tr>
        <td><%= student.profile.major%></td>
        <td><%= student.profile.degree_type%></td>
        <td><%= student.profile.academic_year%></td>
        <td><%= link_to 'Download', resume.file, download: ''  %></td>
        <td><%= link_to 'Contact Student'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>



<% if current_user.user_type == 'Student'%>
  <% if !current_user.uploaded_resume %>
    <%= button_to "Upload your resume", 'new_resume', method: :get%>
  <% else %>
    <%= button_to "Edit your resume", 'resume', method: :delete%>
  <% end %>
<% end %>



<%= button_to "Back", 'authorized', method: :get%>


