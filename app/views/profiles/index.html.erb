<p id="notice"><%= notice %></p>

<h1>Profiles</h1>
<%if current_user.created_profile%>
<table>
  <thead>
    <tr>
      <th>Major</th>
      <th>Degree type</th>
      <th>Academic year</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% profile = current_user.profile %>
      <tr>
        <td><%= profile.major %></td>
        <td><%= profile.degree_type %></td>
        <td><%= profile.academic_year %></td>
        <td><%= profile.email %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
      </tr>
   
  </tbody>
</table>
 <% end %>

<br>

<% if !current_user.created_profile%>
  <%= link_to 'New Profile', new_profile_path %>

<% end %>

<%= link_to 'Back', 'welcome' %>
