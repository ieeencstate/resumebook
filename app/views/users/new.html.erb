<h1>Sign Up</h1>
<%= form_for @user do |f|%> 
	<%= f.label :name%>
 	<%= f.text_field :name%><br>	
	<%= f.label :username%>
 	<%= f.text_field :username%><br> 
 	<%= f.label :password%>
 	<%= f.password_field :password%><br> 	
 	<%= f.label :user_type%>
 	<%= f.select :user_type, ['Student', 'Employer']%><br>
 	<%= f.submit %>
<%end%>